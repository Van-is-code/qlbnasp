@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Patient Edit";
}

@model Asp.Net_MvcWeb_Pj3.Aptech.Models.Patient

@* ràng buộc thẻ input vào entity class *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="ui container">
    <div class="ui segments">
        <div class="ui segment">
            <h5 class="ui header">
                <i class="icon plus"></i>Form Edit Patient
            </h5>
        </div>
        <form asp-action="PatientEdit" method="post" class="ui form segment">

                <input type="hidden" name="Id" value="@Model.Id" />

                <p class="ui field">
                    <label>Name:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Name" value="@Model.Name" />
                </p>

                <p class="ui field">
                    <label>Year:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Year" value="@Model.Year" />
                </p>

                <div class="form-group">
                    <label>Height:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Height" value="@Model.Height" />
                </div>

                <div class="form-group">
                    <label>Blood Type:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="Blood_Type" value="@Model.Blood_Type" />
                </div>

                <div class="form-group">
                    <label>Gender:<label style="color: red; font-size: 150% ;">*</label></label>
                    <label><input type="radio" name="Gender" value="1" @(Model.Gender == 1 ? "checked" : "") /> Male</label>
                    <label><input type="radio" name="Gender" value="0" @(Model.Gender == 0 ? "checked" : "") /> Female</label>
                </div>

                <div class="form-group">
                    <label>Status:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="checkbox" name="Status" value="1" checked="@(Model.Status == 1)" />
                </div>

                <div class="form-group">
                    <label>Import Date:<label style="color: red; font-size: 150% ;">*</label></label>
                    <input type="text" name="ImportDate" value="@Model.ImportDate" />
                </div>

                

                <div class="form-group">
        <label>Publisher:<label style="color: red; font-size: 150% ;">*</label></label>
        <select asp-for="PublisherId" class="form-control">
            @foreach (var publisher in ViewData["publisherList"] as List<Asp.Net_MvcWeb_Pj3.Aptech.Models.Publisher>)
            {
                <option value="@publisher.Id">@publisher.Name</option>
            }
        </select>
        <span asp-validation-for="PublisherId" class="text-danger"></span>
    </div>
                <p class="ui field"></p>
              

                <br class="clear_float">

             <div style="overflow: auto;">
                    <button class="ui button primary" type="submit" style="float: right"><i class="icon save"></i>Lưu</button>
                    <a href="/admin/Patient/index" class="ui button primary" style="float: right"><i
                            class="icon list"></i>Danh Sách</a>
                </div>
        </form>

        <!-- <div class="ui segment">
            Segment Footer
        </div> -->
    </div>
</div>